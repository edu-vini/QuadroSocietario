{% extends 'base.html.twig' %}

{% block content %}
	<div class="list">
		<h1>Lista de Empresas
			<a href="{{path('form_empresa')}}" class="btn btn-primary col-sm-2 ">Adicionar</a>
		</h1>
		<div class="container">
			<div class="row table-header">
				<div class="col-sm-2"> CNPJ </div>
				<div class="col-sm-2"> Razão Social </div>
				<div class="col-sm-2"> Fantasia </div>
				<div class="col-sm-2"> Endereço </div>
				<div class="col-sm-2"> Telefone </div>
				<div class="col-sm-2"> Ações </div>
			</div>
			{% for empresa in list %}
			<div class="row table-content">
				<div class="col-sm-2 cnpj"> {{empresa.cnpj}} </div>
				<div class="col-sm-2"> {{empresa.razaoSocial}}  </div>
				<div class="col-sm-2"> {{empresa.fantasia}}  </div>
				<div class="col-sm-2"> {{empresa.endereco}}  </div>
				<div class="col-sm-2 telefone"> {{empresa.telefone}}  </div>
				<div class="col-sm-2">
					<a href="{{ path('form_empresa_edit', {id: empresa.id}) }}" class="btn btn-secondary"><i class="bi bi-pen"></i></a>
					<a href="{{ path('delete_empresa', {id: empresa.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i></a>
					<a href="{{ path('list_socio_empresa', {id: empresa.id}) }}" class="btn btn-secondary"><i class="bi bi-people"></i></a>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
{% block user_javascripts %}
	<script src="{{asset('js/mask/empresa.list.mask.js')}}"></script>
{% endblock %}